<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>
    <div class="px-4 pt-5 my-5  border-bottom" id="main">
        <% if (locals.content){ %>
            <h1 class="display-4 fw-bold text-center"><%= content[0].word %></h1>
        <%} else if (locals.error){ %>
            <h1 class="display-4 fw-bold text-center">Word not found</h1>
        <% }else{ %>
            <h1 class="display-4 fw-bold text-center">Enter your word here</h1>
        <% } %>

            <div class="col-lg-6 mx-auto">
                <form>
                    <textarea  rows="1" placeholder="Search" name="user_word" class="my-3 col-12"></textarea>
                    <button formmethod="post" formaction="/specific" type="submit" class="btn btn-light btn-lg px-4 me-sm-3">Submit</button>
                    <button formmethod="get" formaction="/random" type="submit" class="btn btn-outline-secondary btn-lg px-4">Generate a random word</button>
                </form>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
                    
                    
                </div>
            </div>
    
    <section class="Dictionary">
  <% if (locals.content) { %>
    <div class="features">
      
      <!-- DEFINITIONS -->
      <div class="definitions">
        <h5>Definitions</h5>
        <% const definitions = content[0].meanings[0].definitions; %>
        <% if (definitions.length > 0) { %>
          <ul>
            <% for (let i = 0; i < Math.min(4, definitions.length); i++) { %>
              <li><%= definitions[i].definition %></li>
            <% } %>
          </ul>
        <% } else { %>
          <p>No definitions</p>
        <% } %>
      </div>

      <!-- AUDIO -->
      <div class="audio">
        <button class="btn btn-primary audio_button">
          <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-volume-up" viewBox="0 0 16 16">
            <path d="M11.536 14.01A8.47 8.47 0 0 0 14.026 8a8.47 8.47 0 0 0-2.49-6.01l-.708.707A7.48 7.48 0 0 1 13.025 8c0 2.071-.84 3.946-2.197 5.303z"/>
            <path d="M10.121 12.596A6.48 6.48 0 0 0 12.025 8a6.48 6.48 0 0 0-1.904-4.596l-.707.707A5.48 5.48 0 0 1 11.025 8a5.48 5.48 0 0 1-1.61 3.89z"/>
            <path d="M10.025 8a4.5 4.5 0 0 1-1.318 3.182L8 10.475A3.5 3.5 0 0 0 9.025 8c0-.966-.392-1.841-1.025-2.475l.707-.707A4.5 4.5 0 0 1 10.025 8M7 4a.5.5 0 0 0-.812-.39L3.825 5.5H1.5A.5.5 0 0 0 1 6v4a.5.5 0 0 0 .5.5h2.325l2.363 1.89A.5.5 0 0 0 7 12zM4.312 6.39 6 5.04v5.92L4.312 9.61A.5.5 0 0 0 4 9.5H2v-3h2a.5.5 0 0 0 .312-.11"/>
          </svg>
        </button>
      </div>

      <!-- ANTONYMS -->
      <div class="antonyms">
        <h5>Antonyms</h5>
        <% 
          const antonyms = content[0].meanings[0].antonyms;
          if (antonyms && antonyms.length > 0) { 
        %>
          <ul>
            <% antonyms.slice(0, 4).forEach(a => { %>
              <li><%= a %></li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No antonyms found</p>
        <% } %>
      </div>

      <!-- SYNONYMS -->
      <div class="synonyms">
        <h5>Synonyms</h5>
        <% 
          const synonyms = content[0].meanings[0].synonyms;
          if (synonyms && synonyms.length > 0) { 
        %>
          <ul>
            <% synonyms.slice(0, 4).forEach(s => { %>
              <li><%= s %></li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No synonyms found</p>
        <% } %>
      </div>

      <!-- EXAMPLES -->
      <div class="examples">
        <h5>Examples</h5>
        <% 
          const examples = definitions
            .map(d => d.example)
            .filter(e => e && e.trim() !== "");
          if (examples.length > 0) { 
        %>
          <ul>
            <% examples.slice(0, 4).forEach(e => { %>
              <li><%= e %></li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No examples found</p>
        <% } %>
      </div>

    </div>
  <% } %>
</section>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>